<div class="container">
  <h1>My Tasks</h1>

  <% @tasks.each do |task| %>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" <%= "checked" if task.completed == true %>>
      <label class="form-check-label">
        <%= link_to task.title, task_path(task) %>
      </label>
    </div>
  <% end %>

  <p>
    <%= link_to '+ Add a new Task', new_task_path %>
  </p>
</div>
